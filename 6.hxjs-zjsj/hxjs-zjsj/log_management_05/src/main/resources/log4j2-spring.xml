<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <!-- 定义日志输出目录 -->
        <Property name="LOG_DIR">logs</Property>
        <!-- 定义日志文件名 -->
        <Property name="LOG_FILE_NAME">app.log</Property>
        <!-- 定义彩色日志格式                                                                                                                                                              magenta：紫色 cyan：浅蓝色-->
        <Property name="LOG_PATTERN_COLOR">%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{[%-5level]}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue, TRACE=cyan} %style{%logger{36}}{magenta} - %msg%n</Property>
        <!-- 定义普通日志格式 -->
        <Property name="LOG_PATTERN_PLAIN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- 控制台输出（彩色日志） -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN_COLOR}" disableAnsi="false"/>
        </Console>

        <!-- 文件输出（普通日志） -->
        <RollingFile name="File" fileName="${LOG_DIR}/${LOG_FILE_NAME}"
                     filePattern="${LOG_DIR}/app-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN_PLAIN}"/>
            <Policies>
                <!-- 每天滚动一次日志文件 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- 日志文件大小超过10MB时滚动 -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- 最多保留30个日志文件 -->
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 根日志记录器，输出到控制台和文件 -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

        <!-- 自定义包或类的日志级别 -->
        <Logger name="com.jinhuajia.log_management.LogManagementApplication" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>